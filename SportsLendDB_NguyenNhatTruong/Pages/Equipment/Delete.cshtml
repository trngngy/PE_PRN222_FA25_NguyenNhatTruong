@page
@model SportsLendDB_NguyenNhatTruong.Pages.Equipment.DeleteModel
@{
    ViewData["Title"] = "Delete Equipment";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Equipment</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>@Model.ErrorMessage</strong>
                        </div>
                        <div class="text-center mt-3">
                            <a asp-page="/Equipment/Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    }
                    else
                    {
                        <h4 class="text-danger mb-3">Are you sure you want to delete this equipment?</h4>

                        <dl class="row">
                            <dt class="col-sm-4">EquipmentId:</dt>
                            <dd class="col-sm-8">@Model.Equipment.EquipmentId</dd>

                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.Equipment.Name</dd>

                            <dt class="col-sm-4">Brand:</dt>
                            <dd class="col-sm-8">@Model.Equipment.Brand</dd>

                            <dt class="col-sm-4">Type:</dt>
                            <dd class="col-sm-8">@Model.Equipment.Type?.TypeName</dd>

                            <dt class="col-sm-4">Condition:</dt>
                            <dd class="col-sm-8">@Model.Equipment.Condition</dd>

                            <dt class="col-sm-4">DailyFeeUSD:</dt>
                            <dd class="col-sm-8">$@Model.Equipment.DailyFeeUsd.ToString("0.00")</dd>

                            <dt class="col-sm-4">InStock:</dt>
                            <dd class="col-sm-8">@Model.Equipment.InStock</dd>
                        </dl>

                        <form method="post">
                            <div class="d-flex justify-content-between mt-4">
                                <a asp-page="/Equipment/Index" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-danger">Delete Equipment</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>