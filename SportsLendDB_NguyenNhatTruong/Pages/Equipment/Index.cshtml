@page
@model SportsLendDB_NguyenNhatTruong.Pages.Equipment.IndexModel
@{
    ViewData["Title"] = "Equipment List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Equipment List</h1>
        <div>
            <span class="me-3">Welcome, <strong>@User.Identity.Name</strong> (@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)</span>
            <a asp-page="/LoanPage/Index" class="btn btn-info btn-sm me-2">Loan Management</a>
            @if (Model.IsManager())
            {
                <a asp-page="/ReportPage/Index" class="btn btn-warning btn-sm me-2">📊 Reports</a>
                <a asp-page="/Equipment/Create" class="btn btn-success btn-sm me-2">Add New Equipment</a>
            }
            <a asp-page="/Authetication/Logout" class="btn btn-secondary btn-sm">Logout</a>
        </div>
    </div>

    <!-- Success Message -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search Box -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <input type="text"
                       name="SearchTerm"
                       value="@Model.SearchTerm"
                       class="form-control me-2"
                       placeholder="Search by Name or Brand..." />
                <button type="submit" class="btn btn-primary">Search</button>
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                {
                    <a asp-page="/Equipment/Index" class="btn btn-secondary ms-2">Clear</a>
                }
            </form>
        </div>
        <div class="col-md-6 text-end">
            <small class="text-muted">
                Showing @Model.Equipment.Count of @Model.TotalItems items
            </small>
        </div>
    </div>

    <!-- Equipment Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="equipmentTable">
            <thead class="table-dark">
                <tr>
                    <th>EquipmentId</th>
                    <th>Name</th>
                    <th>TypeName</th>
                    <th>Brand</th>
                    <th>Condition</th>
                    <th>DailyFeeUSD</th>
                    <th>InStock</th>
                    @if (Model.IsManager())
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @if (Model.Equipment.Any())
                {
                    @foreach (var item in Model.Equipment)
                    {
                        <tr>
                            <td>@item.EquipmentId</td>
                            <td>
                                @if (Model.CanEdit())
                                {
                                    <a asp-page="/Equipment/Edit" asp-route-id="@item.Id">@item.Name</a>
                                }
                                else
                                {
                                    <span>@item.Name</span>
                                    <small class="text-danger d-block">You have no permission to edit this item</small>
                                }
                            </td>
                            <td>@item.Type?.TypeName</td>
                            <td>@item.Brand</td>
                            <td>@item.Condition</td>
                            <td>$@item.DailyFeeUsd.ToString("0.00")</td>
                            <td>@item.InStock</td>
                            @if (Model.IsManager())
                            {
                                <td>
                                    <a asp-page="/Equipment/Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">
                            @if (string.IsNullOrWhiteSpace(Model.SearchTerm))
                            {
                                <span>No equipment found.</span>
                            }
                            else
                            {
                                <span>No equipment found matching "@Model.SearchTerm".</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Equipment pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-page="/Equipment/Index"
                       asp-route-currentPage="@(Model.CurrentPage - 1)"
                       asp-route-searchTerm="@Model.SearchTerm">
                        Previous
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link"
                           asp-page="/Equipment/Index"
                           asp-route-currentPage="@i"
                           asp-route-searchTerm="@Model.SearchTerm">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-page="/Equipment/Index"
                       asp-route-currentPage="@(Model.CurrentPage + 1)"
                       asp-route-searchTerm="@Model.SearchTerm">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/equipmentHub")
            .build();

        connection.on("EquipmentAdded", function () {
            // Refresh page to show new equipment at top
            window.location.reload();
        });

        connection.start().catch(function (err) {
            return console.error(err.toString());
        });
    </script>
}