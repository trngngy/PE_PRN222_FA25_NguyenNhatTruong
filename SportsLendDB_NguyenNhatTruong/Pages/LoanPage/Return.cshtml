@page
@model SportsLendDB_NguyenNhatTruong.Pages.Loan.ReturnModel
@{
    ViewData["Title"] = "Process Return";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">Process Equipment Return</h2>
                </div>
                <div class="card-body">
                    <h4 class="mb-4">Loan Details</h4>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Loan ID:</strong> @Model.Loan.LoanId
                        </div>
                        <div class="col-md-6">
                            <strong>Member:</strong> @Model.Loan.Member?.FullName
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Equipment:</strong> @Model.Loan.Equipment?.EquipmentId - @Model.Loan.Equipment?.Name
                        </div>
                        <div class="col-md-6">
                            <strong>Type:</strong> @Model.Loan.Equipment?.Type?.TypeName
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Loan Date:</strong> @Model.Loan.LoanDate.ToString("dd/MM/yyyy")
                        </div>
                        <div class="col-md-6">
                            <strong>Due Date:</strong> @Model.Loan.DueDate.ToString("dd/MM/yyyy")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Return Date:</strong> <span class="text-primary">@DateTime.Today.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Daily Fee:</strong> $@Model.Loan.DailyFeeUsd.ToString("0.00")
                        </div>
                    </div>

                    <hr />

                    <div class="alert alert-info">
                        <h5 class="mb-3">Fee Calculation</h5>
                        <p class="mb-2">
                            <strong>Total Days:</strong> @Model.TotalDays days
                        </p>
                        <p class="mb-2">
                            <strong>Calculation:</strong> @Model.TotalDays days × $@Model.Loan.DailyFeeUsd.ToString("0.00")
                        </p>
                        <h4 class="mb-0">
                            <strong>Total Fee:</strong> <span class="text-success">$@Model.CalculatedFee.ToString("0.00")</span>
                        </h4>
                    </div>

                    @if (Model.Loan.DueDate < DateOnly.FromDateTime(DateTime.Today))
                    {
                        <div class="alert alert-warning">
                            <strong>Warning:</strong> This loan is overdue!
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="/Loan/Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Confirm Return</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>